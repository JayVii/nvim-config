" Spellcheck
setlocal spell spelllang=en_gb
syntax spell toplevel   "spell-bug workaround 

" Column-limits
set colorcolumn=81        " colour 80th column
set textwidth=80	      " limit columns at 80
set formatoptions+=t	  " hard wrap ad limit

" Indentation
set tabstop=2
set shiftwidth=2

" LaTeX
let g:tex_flavor = 'tex'
